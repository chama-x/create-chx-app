{
  "name": "chx-template",
  "private": true,
  "version": "1.0.0",
  "description": "A flexible, developer-friendly React template with modern UI components, animations, and TypeScript support",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --incremental --tsBuildInfoFile ./node_modules/.tmp/tsbuildinfo && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,md}'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "node checksetup.js",
    "analyze": "vite build --mode analyze",
    "prepare": "husky install"
  },
  "dependencies": {
    "@react-spring/web": "^9.7.5",
    "@tanstack/react-query": "^5.17.19",
    "axios": "^1.6.7",
    "class-variance-authority": "^0.7.0",
    "framer-motion": "^11.0.6",
    "immer": "^10.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.1.2",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.50.1",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.8.1",
    "react-router-dom": "^6.22.1",
    "web-vitals": "^3.5.2",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@hookform/resolvers": "^3.3.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.13.14",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.17",
    "axe-core": "^4.8.3",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.5.0",
    "msw": "^2.2.1",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rollup-plugin-visualizer": "^5.14.0",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.19.0",
    "vite-plugin-svgr": "^4.2.0",
    "vitest": "^1.2.2",
    "vitest-mock-extended": "^1.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,json,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
